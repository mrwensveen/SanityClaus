{
  "name": "sanityclaus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "sveltekit-app",
    "studio"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=sveltekit-app\" \"npm run dev --workspace=studio\"",
    "format": "prettier --cache --write ."
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20"
  }
}